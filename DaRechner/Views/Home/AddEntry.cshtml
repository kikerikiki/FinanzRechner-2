@{
    ViewData["Title"] = "Eintrag hinzufügen";
    var kategorien = ViewBag.Kategorien as List<LAPTemplateMVC.Models.dboSchema.Kategorie>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container-wrapper {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin-top: 50px;
        }

        .back-button {
            margin-right: 20px;
            margin-top: 20px;
        }

            .back-button a {
                text-decoration: none;
                color: #007bff;
                font-size: 24px;
            }

        .container {
            max-width: 600px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .form-group span {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container-wrapper">
        <div class="back-button">
            <a asp-action="Index" class="btn btn-info btn-lg">
                ᐊ
            </a>
        </div>
        <div class="container">
            <h1>Eintrag hinzufügen</h1>
            <form asp-action="AddEntry" method="post">
                <div class="form-group">
                    <label for="EntryType">Typ</label>
                    <select id="EntryType" name="EntryType" class="form-control">
                        <option value="Einnahme">Einnahme</option>
                        <option value="Ausgabe">Ausgabe</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="Bezeichnung">Bezeichnung</label>
                    <input id="Bezeichnung" name="Bezeichnung" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Betrag">Betrag</label>
                    <input id="Betrag" name="Betrag" class="form-control" type="number" />
                </div>
                <div class="form-group">
                    <label for="Kategorieid">Kategorie</label>
                    <select id="Kategorieid" name="Kategorieid" class="form-control">
                        @foreach (var kategorie in kategorien)
                        {
                            <option value="@kategorie.Kategorieid">@kategorie.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Hinzufügen" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    }
</body>
</html>
