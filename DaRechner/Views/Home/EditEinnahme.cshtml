@model LAPTemplateMVC.Models.dboSchema.Einnahme

@{
    ViewData["Title"] = "Edit Einnahme";
    var kategorien = ViewBag.Kategorien as List<LAPTemplateMVC.Models.dboSchema.Kategorie>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 600px;
            margin-top: 50px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .form-group span {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Einnahme</h1>
        <form asp-action="EditEinnahme" method="post">
            <div class="form-group">
                <label asp-for="Bezeichnung" class="control-label"></label>
                <input asp-for="Bezeichnung" class="form-control" />
                <span asp-validation-for="Bezeichnung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Betrag" class="control-label"></label>
                <input asp-for="Betrag" class="form-control" type="number"/>
                <span asp-validation-for="Betrag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valid" class="control-label"></label>
                <input asp-for="Valid" class="form-control" />
                <span asp-validation-for="Valid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorie" class="control-label"></label>
                <select asp-for="Kategorieid" class="form-control" asp-items="@(new SelectList(kategorien, "Kategorieid", "Name"))"></select>
                <span asp-validation-for="Kategorieid" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Einnahmeid" />
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
