@model LAPTemplateMVC.Models.dboSchema.Kategorie

@{
    ViewData["Title"] = "Kategorie erstellen";
}

<h2>Kategorie erstellen</h2>

<form asp-action="CreateKategorie" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Farbe" class="control-label"></label>
        <input asp-for="Farbe" type="color" class="form-control" />
        <span asp-validation-for="Farbe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Erstellen" class="btn btn-primary" />
    </div>
</form>
