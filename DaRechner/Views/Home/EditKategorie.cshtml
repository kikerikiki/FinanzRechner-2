@model LAPTemplateMVC.Models.dboSchema.Kategorie

@{
    ViewData["Title"] = "Edit Kategorie";
}

<h1>Edit Kategorie</h1>

<form asp-action="EditKategorie" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Farbe" class="control-label"></label>
        <input asp-for="Farbe" type="color" class="form-control" />
        <span asp-validation-for="Farbe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Valid" class="control-label"></label>
        <input asp-for="Valid" class="form-control" />
        <span asp-validation-for="Valid" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Kategorieid" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}